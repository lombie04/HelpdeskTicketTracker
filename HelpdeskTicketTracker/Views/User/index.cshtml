@{
    ViewData["Title"] = "User Dashboard";
}

<div class="card-soft">
    <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
        <div>
            <h1 class="page-title mb-1">User Dashboard</h1>
            <div class="muted">Welcome, @User.Identity?.Name</div>
            <div class="mt-2">
                <span class="badge-status badge-open">Role: User</span>
            </div>
        </div>

        <div class="actions-row">
            <a class="btn btn-success" href="/Tickets/Create">Create Ticket</a>
            <a class="btn btn-secondary" href="/Tickets/My">My Tickets</a>
        </div>
    </div>

    <hr />

    <div class="row g-3">
        <div class="col-md-4">
            <div class="comment-item">
                <div class="muted">Quick action</div>
                <div style="font-weight:800; font-size:1.05rem;">Report a new issue</div>
                <div class="muted mt-1">Create a ticket with category + description.</div>
                <div class="mt-3">
                    <a class="btn btn-success" href="/Tickets/Create">New Ticket</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="comment-item">
                <div class="muted">Your work</div>
                <div style="font-weight:800; font-size:1.05rem;">Track progress</div>
                <div class="muted mt-1">See updates and comments from support.</div>
                <div class="mt-3">
                    <a class="btn btn-secondary" href="/Tickets/My">View My Tickets</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="comment-item">
                <div class="muted">Tips</div>
                <div style="font-weight:800; font-size:1.05rem;">Write better tickets</div>
                <div class="muted mt-1">Include steps, screenshots, and expected result.</div>
                <div class="mt-3">
                    <span class="badge-status badge-progress">Open</span>
                    <span class="badge-status badge-progress ms-2">In Progress</span>
                    <span class="badge-status badge-closed ms-2">Closed</span>
                </div>
            </div>
        </div>
    </div>
</div>
