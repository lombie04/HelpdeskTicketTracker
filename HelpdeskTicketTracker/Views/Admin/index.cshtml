@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="card-soft">
    <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
        <div>
            <h1 class="page-title mb-1">Admin Dashboard</h1>
            <div class="muted">Welcome, @User.Identity?.Name</div>
            <div class="mt-2">
                <span class="badge-status badge-open">Role: Admin</span>
            </div>
        </div>

        <div class="actions-row">
            <a class="btn btn-secondary" href="/Tickets">All Tickets</a>
            <a class="btn btn-secondary" href="/Categories">Categories</a>
        </div>
    </div>

    <hr />

    <div class="row g-3">
        <div class="col-md-4">
            <div class="comment-item">
                <div class="muted">Operations</div>
                <div style="font-weight:800; font-size:1.05rem;">Manage ticket flow</div>
                <div class="muted mt-1">Monitor tickets and ensure SLAs are met.</div>
                <div class="mt-3">
                    <a class="btn btn-secondary" href="/Tickets">View All Tickets</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="comment-item">
                <div class="muted">Configuration</div>
                <div style="font-weight:800; font-size:1.05rem;">Maintain categories</div>
                <div class="muted mt-1">Keep categories clean so users file correctly.</div>
                <div class="mt-3">
                    <a class="btn btn-secondary" href="/Categories">Open Categories</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="comment-item">
                <div class="muted">Security</div>
                <div style="font-weight:800; font-size:1.05rem;">Admin-only actions</div>
                <div class="muted mt-1">Only Admin can delete tickets (protected).</div>
                <div class="mt-3">
                    <span class="badge-status badge-closed">Delete Restricted</span>
                </div>
            </div>
        </div>
    </div>
</div>
