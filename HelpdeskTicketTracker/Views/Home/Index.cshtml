@{
    ViewData["Title"] = "Home";
}

<div class="card-soft p-0 overflow-hidden">
    <div style="
        background-image: linear-gradient(rgba(0,0,0,.55), rgba(0,0,0,.55)), url('/images/hero.jpg');
        background-size: cover;
        background-position: center;
        padding: 60px 24px;
        border-radius: 14px;
        color: white;">

        <div class="container" style="max-width: 980px;">
            <h1 style="font-weight: 800; font-size: 2.6rem; margin-bottom: 10px;">
                Helpdesk Ticket Management System
            </h1>

            <p style="max-width: 720px; font-size: 1.05rem; opacity: .95;">
                Create tickets, track status, and keep an organized comment history for each issue.
                Simple prototype built with ASP.NET and SQLite.
            </p>

            <div class="mt-4 d-flex gap-2 flex-wrap">
                @if (User?.Identity?.IsAuthenticated == true)
                {
                    <form method="post" action="/Account/Logout" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-lg">Logout</button>
                    </form>
                }
                else
                {
                    <a class="btn btn-success btn-lg" href="/Account/Login">Login</a>
                }

                <a class="btn btn-outline-light btn-lg" href="/Tickets">Go to Tickets</a>
            </div>
        </div>
    </div>

    <div class="p-4">
        <div class="row g-3">
            <div class="col-md-4">
                <div class="card-soft">
                    <h5 style="font-weight: 800;">Tickets</h5>
                    <div class="muted">Create and manage issue reports.</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card-soft">
                    <h5 style="font-weight: 800;">Status Workflow</h5>
                    <div class="muted">Open → In Progress → Closed.</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card-soft">
                    <h5 style="font-weight: 800;">Comments</h5>
                    <div class="muted">Track updates and resolution notes.</div>
                </div>
            </div>
        </div>
    </div>
</div>
